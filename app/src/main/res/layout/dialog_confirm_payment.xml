<?xml version="1.0" encoding="UTF-8"?>

    <layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="@dimen/_20sdp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:text="Confirm Payment"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/titleTV"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        android:text="Confirm Payment"
        android:layout_margin="@dimen/_10sdp"
        android:id="@+id/detailTV"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/orange"
        android:id="@+id/amountTV"
        app:layout_constraintTop_toBottomOf="@id/detailTV"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/guideGL"
        app:layout_constraintGuide_percent="0.5"
        android:orientation="vertical"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:paddingBottom="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/guideGL"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:text="Proceed"
        android:id="@+id/saveTV"
        app:layout_constraintTop_toBottomOf="@id/amountTV"
        android:layout_marginTop="@dimen/_35sdp"
        android:paddingEnd="@dimen/_28sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_28sdp"
        android:background="@drawable/drawable_background_signup"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:paddingBottom="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:text="@string/cancel"
        android:id="@+id/cancelTV"
        app:layout_constraintTop_toBottomOf="@id/amountTV"
        android:layout_marginTop="@dimen/_35sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingTop="@dimen/_8sdp"
        android:paddingStart="@dimen/_20sdp"
        android:backgroundTint="@color/Gray"
        android:background="@drawable/drawable_background_signup"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@id/guideGL"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>