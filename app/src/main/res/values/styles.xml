<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="CustomPaymentFormTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orange</item>
        <item name="hintTextColor">@color/Gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_regular</item>

        <!--PAY/DONE BUTTON COLOR-->
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:buttonStyle">@style/ButtonColor</item>

        <!--HELPER LABELS AND FIELD UNSELECTED FIELD COLOR-->
        <item name="colorControlNormal">@color/orange</item>

    </style>

    <style name="ButtonColor" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>